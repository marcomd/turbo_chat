<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "session" }) do |f| %>
  <%= f.error_notification %>

  <div class="session__inputs">
    <h2>Sign up</h2>

    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { },
                placeholder: "Email" %>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" },
                placeholder: "Password" %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" },
                placeholder: "Password confirmation" %>

    <%= f.button :submit, "Sign up", class: "btn btn--secondary" %>

    <div class="session__shared-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>
